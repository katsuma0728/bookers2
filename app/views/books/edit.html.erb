<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<% if @book.errors.any? %>
            <h3>
              <%= @book.errors.count %>errors prohibited this obj from 
              being<br>saved:
            </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
  		<%= form_with model: @book, method: :patch do |f| %>
    		<div class="form-group">
    		  <div class = "form-title">
    		    <label for="book_title">Title</label>
    		  </div>
    		   <div class = "edit-form">
    		    <%= f.text_field :title %>
    		  </div>
    		</div>
    		<div class="form-group">
          <div class = "form-title">
    		    <label for ="book_body">Opinion</label>
    		  </div>
    		  <div class = "edit-form">
    		    <%= f.text_area :body %>
    		  </div>
    		</div>
    		<div class = "edit-form">
    		  <%= f.submit "Update Book", class: "btn btn-success" %>
    		</div>
  		<% end %>
  		<%= link_to book_path(@book.id) do %>Show<% end %> |
  		<%= link_to books_path do %>Back<% end %>




