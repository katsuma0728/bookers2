<main>
<div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <% if @book.errors.any? %>
            <%= @book.errors.count %>errors prohibited this obj from being<br>saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
          <h2>User info</h2>
          <div class = "user-profile">
            <%= image_tag @user.get_profile_image(100,100) %>
          </div>
            <table class = "table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class = "row">
              <%= link_to edit_user_path(current_user.id), class:  "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
            <h2 class = "mt-3 ">New book</h2>
              <%= form_with model: @book do |f| %>
                <div class = "title">Title</div>
                  <%= f.text_field :title %>
                <div class = "body">Opinion</div>
                  <%= f.text_area :body %>
                <div class = "action"><%= f.submit 'Create Books' %></div>
              <% end %>
        </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                    <tr>
                      <td><%= image_tag book.user.get_profile_image(80,80) %></td>
                      <td><%= link_to book_path(book.id) do %>
                            <%= book.title %>
                          <% end %>
                      </td>
                      <td><%= book.body %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
      </div>
  </div>
</main>